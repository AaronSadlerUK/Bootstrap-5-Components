<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model.Products)
    {
     <div class="col">
        <div class="card">
                <img src="@product.Image" class="card-img-top" alt="...">
            <div class="card-body">
                    <h5 class="card-title">@product.Title</h5>
                <p class="card-text">@product.Description</p>
            </div>
        </div>
    </div>
    }
</div>